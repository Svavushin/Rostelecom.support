<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="290dp"
        android:layout_height="280dp"
        android:layout_margin="8dp"

        android:layout_marginStart="131dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="131dp"

        android:layout_marginBottom="336dp"


        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_gravity="center"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_background_gradient"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Тест скорости"
                    android:textSize="16sp"
                    />
                </LinearLayout>


            <View
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:id="@+id/status_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Статус сети:" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/inetStatusView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="null" />


            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:id="@+id/speedTest_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Скорость:" />

                <View
                    android:layout_width="65dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/speedView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="null" />


            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:id="@+id/ping_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Задержка:" />

                <View
                    android:layout_width="62dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/pingStatusView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:id="@+id/testBtnLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/testNetButton3"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:keyboardNavigationCluster="false"
                    android:text="Тест" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@style/ProgressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="visible"

                    />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>